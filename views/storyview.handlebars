{{!-- mobile-first setting. Correct rendering and font size on mobile --}}
<meta name="viewport" content="width=device-width, initial-scale=1">

<nav class="navbar navbar-light bg-dark">
  <a class="btn btn-dark float-left" type="button" href="/" aria-label="Back to home page" title="Back to home page">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
    </svg>
  </a>
  <h1 class="navbar-brand mr-0 mb-0 text-white">{{this.name}}</h1>
  <div class="float-right">
    <button id="collapseQR-button" class="btn btn-dark" type="button" data-toggle="collapse" aria-label="Press to show QR code for this story" data-target="#collapseQR">
      <img style="filter: invert(1);" src="/images/qr_logo.png" alt="Press to show QR code for this story" class="img-fluid" width="35" height="35">
    </button>
  </div>
</nav>

<div class="collapse" id="collapseQR">
  <div class="card text-center card-body">
    <div class="text-center mx-auto d-block" id="newqr"></div>
    <a id="qr-download-btn" class="mt-4 btn btn-secondary" download="{{this.name}}_qr" href="" style="color:white;"> Download the qr code </a>
  </div>
</div>

<div id="score-show" style="min-width:30vw; z-index:10;" class="row ml-1 p-2 rounded float-left bg-light">
  <span> Score: </span>
  <span id="scorepoints"> </span>
</div>

