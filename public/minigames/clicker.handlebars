<style>
*{
  font-family:arial,san-serif;
  overflow: hidden;
}
.ball{
  border-radius:50%;
  animation: fadeIn 1.5s 4s linear;
  position:absolute;
  cursor:pointer;
  animation : animationBall 2s infinite;
}
@keyframes animationBall{
  0%,40%,80%,100%{
    box-shadow:0px 0px 35px #fff;
  }
  10%,50%,90%{
    box-shadow:0px 0px 5px #fff;
  }
}
.play-button{
  transform:translate(-50%,-50%);
  position:absolute;
  top:50%;
  left:50%;
  background:#FF3030;
  font-size:30px;
  color:#fff;
  padding:10px 30px;
  border:0px;
  cursor:pointer;
  z-index:3;
  outline:none;
  transition:.5s all;
}
.play-button:hover{
  background:#CD2626;
}
#game-left, #game-right{
  position:absolute;
  width:50%;
  height:100%;
  background:black;
  z-index:2;
  transition:1s all;
}
#game-left{
  left:0;
  top:0;
}
#game-right{
  right:0;
  bottom:0;
}
.hide{
  opacity:0;
}
#game-box{
  box-shadow:0px 2px 15px #fff;
  transform:translate(-550%,-50%);
  position:absolute;
  top:50%;
  left:50%;
  width:300px;
  height:300px;
  background-image: linear-gradient(to right top, #051937, #0e2d5f, #1e4289, #3358b5, #4d6ee3);
  z-index:3;
  color:#fff;
  text-shadow:0px 0px 25px red;
  border-radius:10px;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  transition:.5s all;
}
#game-box p{
  font-size:30px;
}
#game-box span{
  font-size:80px;
}
#game-box #game-close-score{
  position:absolute;
  top:5%;
  right:5%;
  font-size:25px;
  transition:.3s all;
}
#game-close-score:hover{
  transform:scale(1.5);
  color:red;
}
@keyframes fadeIn{
  0%,20%,40%,60%,80%,100%{
    opacity:.6;
    transform:scale(1.2);
  }
  10%,30%,50%,70%,90%{
    opacity:.2;
    transform:scale(.9);
  }
}
</style>

<button class="play-button">Play</button>
<div id="game-left"></div>
<div id="game-right"></div>
<div id="game-box">
  <p>Your score</p>
  <span id="game-scores"></span>
  <div id="game-close-score"><i class="fas fa-times"></i></div>
</div>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" >
