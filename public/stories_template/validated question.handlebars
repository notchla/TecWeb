<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="mb-3" id="content" aria-label="Question">
      {{question}}
    </span>
      <div class="form-group m-3 mt-2">
        <input
          type="text"
          class="form-control"
          placeholder="Response"
          aria-label="Text response"
          aria-describedby="button-addon2"
          id="response-text"
        />
        <input class="form-control mt-2 p-1" id="response-image" type="file" accept="image/*;capture=camera" aria-label="Image response (opens camera)">
        <div class="mt-2">
          <div class="float-right input-group-append">
            <button
              class="btn btn-outline-secondary"
              aria-label="Submit answer"
              id="response-button"
            >
              Submit
            </button>
          </div>
          <div class="float-left mt-2">
            <span
            id="wait-here">
          </span>
        </div>
        </div>
    </div>
    <div id="preview-img"> </div>
  </div>
</div>
